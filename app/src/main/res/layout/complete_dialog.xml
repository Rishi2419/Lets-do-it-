<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/Light5"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="11dp"
    android:background="@color/white"
    android:layout_margin="@dimen/_25sdp"


    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@color/Light5">

        <TextView
            android:id="@+id/tvcompletework"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completed Work"
            android:textColor="@color/HardBlue"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.009"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/ask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Are you sure you completed this work?"
            android:textColor="@color/HardBlue"
            android:textSize="@dimen/_12sdp"
            android:layout_marginTop="10dp"
            app:layout_constraintHorizontal_bias="0.009"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvcompletework" />

        <TextView
            android:id="@+id/No"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="132dp"
            android:text="NO"
            android:textColor="@color/HardBlue"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ask" />

        <TextView
            android:id="@+id/Yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="32dp"
            android:text="YES"
            android:textColor="@color/HardBlue"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ask" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

